@page
@model Menuzama1.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Order?</h3>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Client?.FullName
        </dd>
        <dt class="col-sm-2">
            MenuItem
        </dt>
        <dd class="col-sm-10">
            @Model.Order.MenuItem?.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Price.ToString("C")
        </dd>
        <dt class="col-sm-2">
            OrderDate
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderDate.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Order.ID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-page="./Index">Cancel</a>
</form>
