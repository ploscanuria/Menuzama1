@page
@model Menuzama1.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Client?.FullName
        </dd>
        <dt class="col-sm-2">
            MenuItem
        </dt>
        <dd class="col-sm-10">
            @Model.Order.MenuItem?.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Price.ToString("C")
        </dd>
        <dt class="col-sm-2">
            OrderDate
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderDate.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
